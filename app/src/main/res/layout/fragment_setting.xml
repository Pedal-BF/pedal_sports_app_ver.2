<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_titleDisease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="30dp"
            android:text="질병"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/setting_menuDelete_Disease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="235dp"
            android:src="@drawable/setting_menu_delete"
            android:clickable="true" />

        <ImageView
            android:id="@+id/setting_menuAdd_Disease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/setting_menu_add"
            android:clickable="true" />

    </LinearLayout>

    <TextView
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:background="@color/black" />

    <ImageView
        android:layout_width="390dp"
        android:layout_height="210dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:src="@drawable/setting_menulist"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_titleDisorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="30dp"
            android:text="장애"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/setting_menuDelete_Disorder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="235dp"
            android:src="@drawable/setting_menu_delete"
            android:clickable="true" />

        <ImageView
            android:id="@+id/setting_menuAdd_Disorder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/setting_menu_add"
            android:clickable="true" />

    </LinearLayout>

    <TextView
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:background="@color/black" />

    <ImageView
        android:layout_width="390dp"
        android:layout_height="210dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:src="@drawable/setting_menulist"/>

</LinearLayout>